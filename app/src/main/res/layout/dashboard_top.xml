<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/SPINNER_LAY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ATTENDANCE_TITLE_BAR"
        android:background="@color/cardColor"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/corner_bg"
            android:orientation="horizontal"
            android:padding="5dp">

            <Spinner
                android:id="@+id/SELF_SPIN"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/corner_bg"
            android:orientation="horizontal"
            android:padding="5dp">

            <Spinner
                android:id="@+id/SELECT_PERIOD_SPIN"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/FROM_TO_PICKERS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ATTENDANCE_TITLE_BAR"
        android:background="@color/cardColor"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/SELECT_MONTH_FROM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/corner_bg"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/FROM_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:hint="From"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/date_color" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SELECT_MONTH_TO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/corner_bg"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/TO_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:hint="To"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/date_color" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
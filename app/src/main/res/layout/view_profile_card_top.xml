<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/APPROVED_PROJECT_CELL_VIEW"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/DETAILS_LAY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/APPROV_PROJ_NAME"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:orientation="vertical">

            <com.whatsloan.dsa.customviews.UserCircularImageView
                android:id="@+id/CUST_IMG"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile_placeholder"
                android:layout_weight=".30" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".60"
            android:orientation="vertical">

            <TextView
                android:id="@+id/APPROV_BUILDER_NAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

            <LinearLayout
                android:id="@+id/COMPANY_LAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ADDLSR_TXT"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/STATUS_ADDLSR">

                <TextView
                    android:id="@+id/PHONE_NUMB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/call_color"
                    android:maxLength="10"
                    android:drawablePadding="10dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/DESIGNATION_NAME"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/PHONE_NUMB"
                    android:drawableLeft="@drawable/manager"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/LOAN_STATUS_LAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ADDLSR_TXT"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/STATUS_ADDLSR">

                <ImageView
                    android:id="@+id/MAIL_ICON"
                    android:layout_width="30dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/mail_icon"/>

                <TextView
                    android:id="@+id/MAIL_ID_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/MAIL_ICON"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LOAN_UNIT_DETAILS_LAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ADDLSR_TXT"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/STATUS_ADDLSR">

                <TextView
                    android:id="@+id/ADDRESS_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/location_color"
                    android:drawablePadding="15dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
                        android:background="@color/imgLineColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ENDD_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/STATUS_ENDD"
                    android:text="End date" />

                <RelativeLayout
                    android:id="@+id/ENDD_TXT_LAY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ENDD_TXT"
                    android:layout_toRightOf="@+id/STATUS_ENDD"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/ENDD_MAIN_TXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:hint="Select Completion Date"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/date_color" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/ENDD_TXT_LAY"
                    android:layout_toRightOf="@+id/STATUS_ENDD"
                    android:background="@color/imgLineColor" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/STATUS_LAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/STATUS_PROJ_STATUS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/STATUS_PROJ_STATUS_IMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/circle_tick_color" />

                    <ImageView
                        android:id="@+id/STATUS_PROJ_STATUS_LINE"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center|top"
                        android:background="@color/imgLineColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/PROJ_STATUS_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/STATUS_PROJ_STATUS"
                    android:text="Bank Approved Status" />

                <Spinner
                    android:id="@+id/PROJ_STATUS_SPINNER"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/PROJ_STATUS_TXT"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/STATUS_PROJ_STATUS" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/PROJ_STATUS_SPINNER"
                    android:layout_toRightOf="@+id/STATUS_PROJ_STATUS"
                    android:background="@color/imgLineColor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/STATUS_PHOTO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/STATUS_PHOTO_IMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/circle_tick_color" />

                    <!--<ImageView
                        android:id="@+id/STATUS_PHOTO_LINE"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center|top"
                        android:background="@color/imgLineColor" />-->

                </LinearLayout>

                <TextView
                    android:id="@+id/PHOTO_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/STATUS_PHOTO"
                    android:text="Project Photo" />

                <RelativeLayout
                    android:id="@+id/PHOTO_TXT_LAY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/PHOTO_TXT"
                    android:layout_toRightOf="@+id/STATUS_PHOTO"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/PROJ_IMG"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:scaleType="fitXY"
                            android:src="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/PHOTO_URL_LINK"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/TAKE_PHOTO_TXT"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@color/calendarBlock"
                            android:drawableTop="@drawable/photo_bg"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:text="Take a Photo"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/GALLERY_PHOTO_TXT"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@color/calendarBlock"
                            android:drawableTop="@drawable/photo_bg"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:text="Choose Photo"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/PHOTO_TXT_LAY"
                    android:layout_toRightOf="@+id/STATUS_PHOTO"
                    android:background="@color/imgLineColor" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/SUBMIT_CANCEL_LAY"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:elevation="2dp">

        <TextView
            android:id="@+id/SUBMIT_BTN_TXT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Submit"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@color/buttonBg"/>
        <TextView
            android:id="@+id/CANCEL_BTN_TXT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@color/imgLineColor"/>
    </LinearLayout>

</RelativeLayout>
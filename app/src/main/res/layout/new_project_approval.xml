                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/STATUS_BANK" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/BANK_SPINNER"
                    android:layout_toRightOf="@+id/STATUS_BANK"
                    android:background="@color/imgLineColor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/STATUS_UNIT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/STATUS_STATUS_IMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/circle_tick_color" />

                    <ImageView
                        android:id="@+id/STATUS_STATUS_LINE"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center|top"
                        android:background="@color/imgLineColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/STATUS_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/STATUS_UNIT"
                    android:text="Unit Details" />

                <EditText
                    android:id="@+id/STATUS_DESCRIPTION_EDIT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/STATUS_TXT"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/STATUS_UNIT"
                    android:background="@android:color/transparent"
                    android:hint="Enter Unit Details"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/STATUS_DESCRIPTION_EDIT"
                    android:layout_toRightOf="@+id/STATUS_UNIT"
                    android:background="@color/imgLineColor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/STATUS_TEAM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/STATUS_TEAM_IMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/circle_tick_color" />

                    <ImageView
                        android:id="@+id/STATUS_TEAM_LINE"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center|top"
                        android:background="@color/imgLineColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/TEAM_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/STATUS_TEAM"
                    android:text="Assigned Team Member" />

                <Spinner
                    android:id="@+id/TEAM_SPINNER"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/TEAM_TXT"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/STATUS_TEAM" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/TEAM_SPINNER"
                    android:layout_toRightOf="@+id/STATUS_TEAM"
                    android:background="@color/imgLineColor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/STATUS_POSSESSION"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/STATUS_POSSESSION_IMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/circle_tick_color" />

                    <ImageView
                        android:id="@+id/STATUS_POSSESSION_LINE"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center|top"
                        android:background="@color/imgLineColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/POSSESSION_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/STATUS_POSSESSION"
                    android:text="Possession Date" />

                <RelativeLayout
                    android:id="@+id/POSSESSION_TXT_LAY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/POSSESSION_TXT"
                    android:layout_toRightOf="@+id/STATUS_POSSESSION"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/POSSESSION_DATE_TXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:hint="Select a Date"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/date_color"
                        android:text="(0/162)" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/POSSESSION_TXT_LAY"
                    android:layout_toRightOf="@+id/STATUS_POSSESSION"
                    android:background="@color/imgLineColor" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/STARTD_LAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/STATUS_STARTD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/STATUS_STARTD_IMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/circle_tick_color" />

                    <ImageView
                        android:id="@+id/STATUS_STARTD_LINE"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center|top"
                        android:background="@color/imgLineColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/STARTD_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/STATUS_STARTD"
                    android:text="Start date" />

                <RelativeLayout
                    android:id="@+id/STARTD_TXT_LAY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/STARTD_TXT"
                    android:layout_toRightOf="@+id/STATUS_STARTD"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/STARTD_MAIN_TXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:hint="Select LSR Init Date"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/date_color" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/STARTD_TXT_LAY"
                    android:layout_toRightOf="@+id/STATUS_STARTD"
                    android:background="@color/imgLineColor" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ENDD_LAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/STATUS_ENDD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/STATUS_ENDD_IMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/circle_tick_color" />

                    <ImageView
                        android:id="@+id/STATUS_ENDD_LINE"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RELEV_LAY"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardColor">

    <include android:id="@+id/NEW_PROJECT_APP_TITLE_BAR"
        layout="@layout/titlebar"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NEW_PROJECT_APP_TITLE_BAR"
        android:layout_above="@+id/SUBMIT_CANCEL_LAY">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="13dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/STATUS_BUILDER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/STATUS_IMG_BUILDER"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/circle_tick_color" />

                    <ImageView
                        android:id="@+id/STATUS_LINE_BUILDER"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center|top"
                        android:background="@color/imgLineColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/BUILDER_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/STATUS_BUILDER"
                    android:text="Builder Name" />

                <Spinner
                    android:id="@+id/BUILDER_SPINNER"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/BUILDER_TXT"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/STATUS_BUILDER" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/BUILDER_SPINNER"
                    android:layout_toRightOf="@+id/STATUS_BUILDER"
                    android:background="@color/imgLineColor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/STATUS_PROJECT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/STATUS_PROJECT_IMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/circle_tick_color" />

                    <ImageView
                        android:id="@+id/STATUS_PROJECT_LINE"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center|top"
                        android:background="@color/imgLineColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/PROJECT_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/STATUS_PROJECT"
                    android:text="Project Name" />

                <EditText
                    android:id="@+id/PROJECT_DESCRIPTION_EDIT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/PROJECT_TXT"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/STATUS_PROJECT"
                    android:background="@android:color/transparent"
                    android:hint="Enter Project Name"
                    android:maxLines="2"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/PROJECT_DESCRIPTION_EDIT"
                    android:layout_toRightOf="@+id/STATUS_PROJECT"
                    android:background="@color/imgLineColor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/STATUS_LOCATION"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/STATUS_LOCATION_IMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/circle_tick_color" />

                    <ImageView
                        android:id="@+id/STATUS_LOCATION_LINE"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center|top"
                        android:background="@color/imgLineColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/LOCATION_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/STATUS_LOCATION"
                    android:text="Project Location" />

                <EditText
                    android:id="@+id/LOCATION_DESCRIPTION_EDIT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LOCATION_TXT"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/STATUS_LOCATION"
                    android:background="@android:color/transparent"
                    android:hint="Enter Project Location"
                    android:maxLines="2"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/LOCATION_DESCRIPTION_EDIT"
                    android:layout_toRightOf="@+id/STATUS_LOCATION"
                    android:background="@color/imgLineColor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/STATUS_CITY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/STATUS_CITY_IMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/circle_tick_color"/>

                    <ImageView
                        android:id="@+id/STATUS_CITY_LINE"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center|top"
                        android:background="@color/imgLineColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/CITY_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/STATUS_CITY"

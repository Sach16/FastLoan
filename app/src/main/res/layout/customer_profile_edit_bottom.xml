                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/EDIT_EMAIL_LAY"
            android:background="@color/imgLineColor" />
    </RelativeLayout>

    <RelativeLayout

            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Right time to contact (IST)" />

        <RelativeLayout
            android:id="@+id/RIGHT_CONTACT_TIME_LAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RIGHT_CONTACT_TIME"

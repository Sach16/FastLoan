    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TEXT_SALARY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Net Salary Per Month" />

        <RelativeLayout
            android:id="@+id/EDIT_SALARY_LAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TEXT_SALARY"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/RUPEES_SYMBOL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="\u20B9"/>

            <EditText
                android:id="@+id/EDIT_SALARY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/RUPEES_SYMBOL"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:hint="Enter Salary"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/EDIT_SALARY_LAY"
            android:background="@color/imgLineColor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TEXT_PAN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="PAN NO." />

        <RelativeLayout
            android:id="@+id/EDIT_PAN_LAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TEXT_PAN"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/EDIT_PAN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:hint="Enter Pan No."
                android:maxLines="1"
                android:inputType="textCapCharacters"
                android:digits="@string/panAlphaNumeric"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/EDIT_PAN_LAY"
